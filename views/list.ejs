<!doctype html>
<html lang="it">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Liste di esercizi già fatti</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="/styles/list.css">
</head>

<body>
<!-- Include navbar -->
<%- include('partials/navbar') %>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1 class="hero-title">
            <i class="fas fa-list-check me-3"></i>
            Liste Esercizi Disponibili
        </h1>
        <p class="hero-subtitle">
            Accedi a tutti gli esercizi già preparati, organizzati per anno e materia
        </p>
    </div>
</section>

<!-- Main Content -->
<div class="container main-content">
    <!-- Search and Filter Bar -->
    <div class="filter-section">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" class="form-control" id="searchExercises" placeholder="Cerca esercizi...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="yearFilter">
                    <option value="">Tutti gli anni</option>
                    <option value="1">Primo anno</option>
                    <option value="2">Secondo anno</option>
                    <option value="3">Terzo anno</option>
                    <option value="old">Vecchio Ordinamento</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-outline-primary w-100" onclick="resetFilters()">
                    <i class="fas fa-redo me-2"></i>Reset Filtri
                </button>
            </div>
        </div>
    </div>

    <!-- Exercises by Year -->
    <div class="exercises-container">
    
        <div class="year-section" data-year="1">
            <div class="year-header">
                <h2><i class="fas fa-graduation-cap me-2"></i> Primo Anno</h2>
                <span class="badge" id="badge-year-1">Caricamento...</span>
            </div>
            <div class="row g-4" id="container-year-1"></div>
        </div>

        <div class="year-section" data-year="2">
            <div class="year-header">
                <h2><i class="fas fa-graduation-cap me-2"></i> Secondo Anno</h2>
                <span class="badge" id="badge-year-2">Caricamento...</span>
            </div>
            <div class="row g-4" id="container-year-2"></div>
        </div>

        <div class="year-section" data-year="3">
            <div class="year-header">
                <h2><i class="fas fa-graduation-cap me-2"></i> Terzo Anno</h2>
                <span class="badge" id="badge-year-3">Caricamento...</span>
            </div>
            <div class="row g-4" id="container-year-3"></div>
        </div>

        <div class="year-section" data-year="vecchio-ordinamento">
            <div class="year-header">
                <h2><i class="fas fa-archive me-2"></i> Vecchio Ordinamento</h2>
                <span class="badge" id="badge-vo">Caricamento...</span>
            </div>
            <div class="row g-4" id="container-vo"></div>
        </div>

    </div>
</div>
<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <h2 class="text-center mb-5">Caratteristiche Principali</h2>
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-item">
                    <i class="fas fa-book-open feature-icon"></i>
                    <h4 class="feature-title">43</h4>
                    <p class="feature-description">
                        Materie Totali
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-item">
                    <i class="fas fa-pen-to-square feature-icon"></i>
                    <h4 class="feature-title">3,500+</h4>
                    <p class="feature-description">
                        Esercizi Disponibili
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-item">
                    <i class="fas fa-clock feature-icon"></i>
                    <h4 class="feature-title">~60h</h4>
                    <p class="feature-description">
                        Tempo Totale
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-item">
                    <i class="fas fa-graduation-cap feature-icon"></i>
                    <h4 class="feature-title">180</h4>
                    <p class="feature-description">
                        CFU Coperti
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Loading Modal -->
<div class="modal fade" id="loadingModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div class="spinner-border text-primary mb-3" style="width: 3rem; height: 3rem;"></div>
                <h5 id="loadingText">Caricamento in corso...</h5>
                <p class="text-muted mb-0" id="loadingSubtext">Preparazione degli esercizi</p>
            </div>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-info-circle me-2 text-primary"></i>
            <strong class="me-auto">Notifica</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            Messaggio di notifica
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/scripts/list.js"></script>
</body>
</html>